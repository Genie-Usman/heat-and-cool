{%- style -%}
  .info-card {
    border-style: solid;
    border-width: 2px;
    border-image: url({{ 'image_border2.png' | asset_url }}) 2 2 2 1 repeat;
  }

  .section-header-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #d1d5db;
  }
  
  .section-header-badge {
    position: relative;
    display: inline-block;
    padding: 2px 12px;
    background: #fff;
    border: 1px solid #2d3a4d;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #2d3a4d;
    transform: rotate(-16deg);
    box-shadow: 0 0 0 4px #fff;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding bg-white">
  <div class="container mx-auto px-4 max-w-site">
    {%- if section.settings.badge_text != blank -%}
      <div class="section-header-divider relative text-center mb-4">
        <span class="section-header-badge">{{ section.settings.badge_text }}</span>
      </div>
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 tracking-wider uppercase text-gray-900">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      {%- comment -%} Get info cards first {%- endcomment -%}
      {%- assign info_cards = section.blocks | where: "type", "info_card" -%}
      {%- assign promo_banners = section.blocks | where: "type", "promo_banner" -%}
      
      {%- if info_cards.size > 0 -%}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          {%- for block in info_cards -%}
            <div class="info-card bg-white p-8 pb-12 text-center relative" {{ block.shopify_attributes }}>
              {%- comment -%} Icon {%- endcomment -%}
              <div class="flex justify-center mb-6 -mt-16">
                {%- if block.settings.icon != blank -%}
                  <div class="w-24 h-24 rounded-lg flex items-center justify-center overflow-hidden" style="background-color: {{ block.settings.icon_bg_color }};">
                    {{ block.settings.icon | image_url: width: 80 | image_tag: 
                      loading: 'lazy',
                      class: 'w-24 h-24 object-contain'
                    }}
                  </div>
                {%- else -%}
                  <div class="w-24 h-24 rounded-lg flex items-center justify-center" style="background-color: {{ block.settings.icon_bg_color }};">
                    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                  </div>
                {%- endif -%}
              </div>
              
              {%- comment -%} Title {%- endcomment -%}
              {%- if block.settings.title != blank -%}
                <h3 class="text-2xl md:text-7xl font-medium uppercase tracking-wider text-gray-900 mb-4">
                  {{ block.settings.title }}
                </h3>
              {%- endif -%}
              
              {%- comment -%} Description {%- endcomment -%}
              {%- if block.settings.description != blank -%}
                <p class="text-[#333232] font-medium text-sm leading-relaxed mb-6 mt-4 max-w-xl mx-auto" style="font-family: 'Inter', sans-serif;">
                  {{ block.settings.description }}
                </p>
              {%- endif -%}
              
              {%- comment -%} Button - Centered on bottom border {%- endcomment -%}
              {%- if block.settings.button_text != blank -%}
                <div class="absolute bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1/2">
                  <a href="{{ block.settings.button_link | default: '#' }}" 
                     class="inline-block px-8 py-3 text-sm font-bold uppercase tracking-wider text-white transition-colors rounded"
                     style="background-color: {{ block.settings.button_color }};">
                    {{ block.settings.button_text }}
                  </a>
                </div>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
      
      {%- comment -%} Promo Banners - Just images {%- endcomment -%}
      {%- for block in promo_banners -%}
        <div class="rounded-sm overflow-hidden" {{ block.shopify_attributes }}>
          {%- if block.settings.banner_image != blank -%}
            <a href="{{ block.settings.banner_link | default: '#' }}" class="block">
              {{ block.settings.banner_image | image_url: width: 1920 | image_tag: 
                loading: 'lazy',
                class: 'w-full h-auto object-cover'
              }}
            </a>
          {%- else -%}
            <div class="w-full h-32 bg-gray-100 flex items-center justify-center">
              {{ 'image' | placeholder_svg_tag: 'w-full h-32 text-gray-300' }}
            </div>
          {%- endif -%}
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Learning Center",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "View"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "LEARNING CENTER"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "info_card",
      "name": "Info Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        },
        {
          "type": "color",
          "id": "icon_bg_color",
          "label": "Icon background color",
          "default": "#14b8a6"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Learning Center"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Getting the most out of your heating and cooling appliances has never been easier."
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "View Now"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button color",
          "default": "#c45a2c"
        }
      ]
    },
    {
      "type": "promo_banner",
      "name": "Promo Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner image"
        },
        {
          "type": "url",
          "id": "banner_link",
          "label": "Banner link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Learning Center",
      "blocks": [
        { 
          "type": "info_card",
          "settings": {
            "title": "Learning Center",
            "description": "Getting the most out of your heating and cooling appliances has never been easier. From product information, how-to guides, frequently asked questions and maintenance tips, we have a wide array of tools to guide you."
          }
        },
        { 
          "type": "info_card",
          "settings": {
            "title": "Quote-By-Photo",
            "description": "Get Customized AC Replacement Recommendations with Your Photos. Upgrade your air conditioner hassle-free. Share images of your current unit, and we'll provide personalized recommendations for its replacement."
          }
        },
        {
          "type": "promo_banner"
        }
      ]
    }
  ]
}
{% endschema %}
