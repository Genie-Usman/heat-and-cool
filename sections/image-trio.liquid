{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  if section.settings.full_width
    assign container_class = 'w-full px-4'
  else
    assign container_class = 'container mx-auto px-4 max-w-site'
  endif
-%}

<div class="section-{{ section.id }}-padding bg-white">
  <div class="{{ container_class }}">
    {%- if section.blocks.size > 0 -%}
      <div class="grid grid-cols-2 md:grid-cols-12 gap-6 md:gap-8 mb-12">
        {%- for block in section.blocks -%}
          {%- liquid
            case block.settings.desktop_width
              when '25'
                assign desktop_span = 'md:col-span-3'
              when '33'
                assign desktop_span = 'md:col-span-4'
              when '50'
                assign desktop_span = 'md:col-span-6'
              when '66'
                assign desktop_span = 'md:col-span-8'
              when '100'
                assign desktop_span = 'md:col-span-12'
              else
                assign desktop_span = 'md:col-span-4'
            endcase

            case block.settings.mobile_width
              when '50'
                assign mobile_span = 'col-span-1'
              when '100'
                assign mobile_span = 'col-span-2'
              else
                assign mobile_span = 'col-span-2'
            endcase
          -%}
          <div class="{{ mobile_span }} {{ desktop_span }}" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="block">
            {%- endif -%}
            
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 800 | image_tag: 
                loading: 'lazy',
                class: 'w-full h-auto object-cover',
                widths: '375, 550, 750, 1100, 1500',
                sizes: '(min-width: 990px) 33vw, 100vw'
              }}
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'w-full h-64 object-cover bg-gray-100' }}
            {%- endif -%}

            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.text_content != blank -%}
      <div class="max-w-2xl mx-auto {{ section.settings.text_alignment }} text-xl md:text-2xl tracking-widest uppercase font-medium text-gray-800 leading-relaxed">
        {{ section.settings.text_content }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Image Trio",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": false
    },
    {
      "type": "richtext",
      "id": "text_content",
      "label": "Text content",
      "default": "<p>WELCOME TO HEATANDCOOL.COM - THE MOST TRUSTED HVAC RETAILER ONLINE</p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Center" },
        { "value": "text-right", "label": "Right" }
      ],
      "default": "text-center"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "image_column",
      "name": "Image Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "desktop_width",
          "label": "Desktop width",
          "options": [
            { "value": "25", "label": "25%" },
            { "value": "33", "label": "33%" },
            { "value": "50", "label": "50%" },
            { "value": "66", "label": "66%" },
            { "value": "100", "label": "100%" }
          ],
          "default": "33"
        },
        {
          "type": "select",
          "id": "mobile_width",
          "label": "Mobile width",
          "options": [
            { "value": "50", "label": "50%" },
            { "value": "100", "label": "100%" }
          ],
          "default": "100"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Trio",
      "blocks": [
        { "type": "image_column" },
        { "type": "image_column" },
        { "type": "image_column" }
      ]
    }
  ]
}
{% endschema %}
