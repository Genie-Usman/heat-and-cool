{% comment %}
  Footer Section - Block-based
  All footer elements are blocks so users can add as many as they want
{% endcomment %}

{% assign menu_blocks = section.blocks | where: 'type', 'menu_column' %}
{% assign social_blocks = section.blocks | where: 'type', 'social_link' %}
{% assign payment_blocks = section.blocks | where: 'type', 'payment_icon' %}
{% assign contact_block = section.blocks | where: 'type', 'contact_info' | first %}
{% assign newsletter_block = section.blocks | where: 'type', 'newsletter' | first %}

<!-- "Find out WHY YOU SHOULD BUY FROM US" Badge -->
{% if section.settings.show_badge %}
  <div class="relative">
    <a 
      href="{{ section.settings.badge_link }}" 
      class="absolute -top-12 right-4 md:right-16 z-10 transform hover:scale-105 transition-transform"
    >
      <div class="w-24 h-24 rounded-full bg-[#1ab2c5] flex flex-col items-center justify-center text-white text-center shadow-lg border-2 border-white ring-1 ring-gray-200">
        <span class="text-[9px] italic font-medium mb-0.5 font-serif">find out</span>
        <span class="text-[10px] font-bold uppercase leading-tight tracking-wider">WHY YOU<br>SHOULD</span>
        <span class="text-[10px] font-bold uppercase leading-tight tracking-wider">BUY FROM US</span>
      </div>
    </a>
  </div>
{% endif %}

<!-- Decorative Top Bar -->
<div class="w-full h-1.5 bg-linear-to-r from-[#1a2e3b] via-[#253d4a] to-[#1a2e3b]"></div>

<!-- Main Footer -->
<footer class="bg-[#1c252e] text-white py-16 font-['Inter',sans-serif]">
  <div class="container mx-auto px-4 md:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-16">
      
      <!-- Contact Info Block -->
      {% if contact_block %}
        <div {{ contact_block.shopify_attributes }}>
          <div class="mb-6">
            <h3 class="text-xl font-bold uppercase text-[#fa5b32] tracking-wide mb-2">{{ contact_block.settings.heading }}</h3>
            <p class="text-white text-sm">{{ contact_block.settings.subheading }}</p>
          </div>
          
          <div class="space-y-3 mb-6">
            {% if contact_block.settings.phone_number != blank %}
              <a href="tel:{{ contact_block.settings.phone_number }}" class="flex items-center gap-3 text-white hover:text-[#fa5b32] transition-colors group">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 15.5c-1.25 0-2.45-.2-3.57-.57a1.02 1.02 0 0 0-1.02.24l-2.2 2.2a15.045 15.045 0 0 1-6.59-6.59l2.2-2.21a.96.96 0 0 0 .25-1A11.36 11.36 0 0 1 8.5 4c0-.55-.45-1-1-1H3.5l-1 1c0 9.39 7.61 17 17 17l1-1v-4c0-.55-.45-1-1-1zM19 12h2a9 9 0 0 0-9-9v2c3.87 0 7 3.13 7 7zm-4 0h2c0-2.76-2.24-5-5-5v2c1.66 0 3 1.34 3 3z"/>
                </svg>
                <span class="text-lg font-bold">{{ contact_block.settings.phone_number }}</span>
              </a>
            {% endif %}
            
            {% if contact_block.settings.email != blank %}
              <a href="mailto:{{ contact_block.settings.email }}" class="flex items-center gap-3 text-white hover:text-[#fa5b32] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                <span class="text-sm font-medium">{{ contact_block.settings.email_text | default: 'Send us an email' }}</span>
              </a>
            {% endif %}
          </div>
          
          <!-- Social Links with Connect Button -->
          <div class="pt-8 flex flex-wrap items-center gap-4">
            {% if contact_block.settings.social_button_text != blank %}
              <div class="relative drop-shadow">
                <a href="{{ contact_block.settings.social_button_url }}" class="block bg-[#fa5b32] hover:bg-[#d04a2e] text-white text-[10px] font-bold uppercase pl-4 pr-8 py-2 transition-colors" style="clip-path: polygon(0% 0%, 88% 0%, 100% 50%, 88% 100%, 0% 100%);">
                  {{ contact_block.settings.social_button_text }}
                </a>
              </div>
            {% endif %}
            
            <div class="flex items-center gap-2">
              {% for block in social_blocks %}
                <a 
                  href="{{ block.settings.url }}" 
                  class="w-8 h-8 rounded-full bg-white text-[#1c252e] flex items-center justify-center transition-transform hover:scale-110"
                  aria-label="{{ block.settings.label }}"
                  {{ block.shopify_attributes }}
                >
                  {% case block.settings.icon %}
                    {% when 'facebook' %}
                      {% render 'icon-facebook' %}
                    {% when 'youtube' %}
                      {% render 'icon-youtube' %}
                      {% when 'instagram' %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                      {% when 'twitter' %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                        </svg>
                      {% when 'pinterest' %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z"/>
                        </svg>
                      {% when 'tiktok' %}
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                        </svg>
                      {% when 'blog' %}
                        {% render 'icon-blog' %}
                      {% else %}
                        <span class="text-white text-xs font-bold">{{ block.settings.label | truncate: 4, '' | upcase }}</span>
                    {% endcase %}
                  </a>
                {% endfor %}
              </div>
            </div>
        </div>
      {% endif %}
      
      <!-- Menu Columns (dynamically added blocks) -->
      {% for block in menu_blocks %}
        <div {{ block.shopify_attributes }}>
          <h3 class="text-lg font-bold uppercase mb-6 tracking-wide">{{ block.settings.heading }}</h3>
          <ul class="space-y-3">
            {% for link in block.settings.menu.links %}
              <li>
                <a href="{{ link.url }}" class="text-gray-300 hover:text-white hover:underline text-sm transition-colors">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
      
      <!-- Newsletter Block -->
      {% if newsletter_block %}
        <div class="space-y-6 pt-2" {{ newsletter_block.shopify_attributes }}>
          <h3 class="text-lg font-bold uppercase tracking-wide mb-1">{{ newsletter_block.settings.heading }}</h3>
          
          <form 
            action="{{ newsletter_block.settings.form_action | default: '/contact#newsletter' }}"
            method="post"
            class="flex flex-col gap-2"
          >
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="âœ“">
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="flex">
              <input 
                type="email" 
                name="contact[email]" 
                placeholder="{{ newsletter_block.settings.placeholder | default: 'Enter your email ...' }}" 
                required 
                class="grow px-4 py-3 bg-white text-gray-800 text-sm rounded-l-sm outline-none focus:ring-0 placeholder-gray-400"
              >
              <button 
                type="submit" 
                class="bg-[#fa5b32] hover:bg-[#d04a2e] text-white font-bold uppercase text-sm px-6 py-3 rounded-r-sm transition-colors whitespace-nowrap"
              >
                {{ newsletter_block.settings.button_text | default: 'Subscribe' }}
              </button>
            </div>
          </form>
          
          <!-- Payment Icons - Block Based -->
          {% if payment_blocks.size > 0 %}
            <div class="pt-6">
              <style>
                .payment-icon-wrapper {
                  background-color: transparent !important;
                  border: 1px solid rgba(255, 255, 255, 0.2) !important;
                  color: rgba(255, 255, 255, 0.6) !important;
                  transition: all 0.3s ease;
                }
                .payment-icon-wrapper:hover {
                  border-color: rgba(255, 255, 255, 0.5) !important;
                  color: #ffffff !important;
                }
                .payment-icon-wrapper svg {
                  fill: currentColor;
                  height: 100%;
                  width: auto;
                  max-width: 100%;
                }
                .payment-icon-wrapper img.invert-icon {
                  filter: brightness(0) invert(1);
                  opacity: 0.7;
                }
                .payment-icon-wrapper:hover img.invert-icon {
                  opacity: 1;
                }
              </style>
              <div class="grid grid-cols-4 gap-2">
                {% for block in payment_blocks %}
                  {% if block.settings.enabled %}
                    <div class="payment-icon-wrapper rounded p-1 flex items-center justify-center h-10" {{ block.shopify_attributes }}>
                      {% if block.settings.custom_image != blank %}
                        {{ block.settings.custom_image | image_url: width: 80 | image_tag: class: 'h-6 w-auto object-contain invert-icon', loading: 'lazy' }}
                      {% else %}
                        {% case block.settings.icon %}
                          {% when 'visa' %}
                            <div class="h-4">{% render 'icon-visa' %}</div>
                          {% when 'mastercard' %}
                            <div class="h-6">{% render 'icon-mastercard' %}</div>
                          {% when 'american_express' %}
                            <div class="h-6">{% render 'icon-american-express' %}</div>
                          {% when 'discover' %}
                            <div class="h-3">{% render 'icon-discover' %}</div>
                          {% when 'amazon' %}
                            <div class="h-4">{% render 'icon-amazon' %}</div>
                          {% when 'verisign' %}
                            <div class="h-6">{% render 'icon-verisign' %}</div>
                          {% when 'paypal' %}
                            <div class="h-4">{% render 'icon-paypal' %}</div>
                          {% when 'heatandcool_financing' %}
                            <div class="w-full h-full flex items-center justify-center">
                                <img src="{{ 'icon_logo.png' | asset_url }}" alt="Heat & Cool Financing" class="h-5 w-auto object-contain invert-icon" loading="lazy">
                            </div>
                          {% else %}
                            <span class="text-[10px] font-bold uppercase truncate">{{ block.settings.label }}</span>
                        {% endcase %}
                      {% endif %}
                    </div>
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endif %}
        </div>
      {% endif %}
      
    </div>
  </div>
</footer>

<!-- Footer Bottom Bar -->
<div class="bg-[#3a4a58] py-8">
  <div class="container mx-auto px-4 md:px-8 flex flex-col items-center justify-center gap-4">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="block">
      {% if section.settings.footer_logo %}
        {{ section.settings.footer_logo | image_url: width: 60 | image_tag: class: 'object-contain h-10', loading: 'lazy' }}
      {% else %}
        <!-- Default Logo Icon (flame drop) -->
        <div class="w-10 h-10 relative flex items-center justify-center">
          <svg viewBox="0 0 40 50" class="w-8 h-10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 0C20 0 5 18 5 30C5 42 12 50 20 50C28 50 35 42 35 30C35 18 20 0 20 0Z" fill="url(#footer-logo-gradient)"/>
            <defs>
              <linearGradient id="footer-logo-gradient" x1="20" y1="0" x2="20" y2="50" gradientUnits="userSpaceOnUse">
                <stop offset="0%" stop-color="#e85a3c"/>
                <stop offset="100%" stop-color="#1ab2c5"/>
              </linearGradient>
            </defs>
          </svg>
        </div>
      {% endif %}
    </a>
    
    <!-- Copyright -->
    <p class="text-gray-400 text-xs text-center">
      &copy; {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text | default: shop.name }}. All Rights Reserved.
    </p>
  </div>
</div>

