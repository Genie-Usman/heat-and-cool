{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .product-divider {
    border-right: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .product-divider:last-child {
    border-right: none;
  }
  
  @media screen and (max-width: 1023px) {
    .product-divider:nth-child(2n) {
      border-right: none;
    }
  }
  
  @media screen and (max-width: 639px) {
    .product-divider {
      border-right: none;
      border-bottom: 1px solid #e5e7eb;
    }
    .product-divider:last-child {
      border-bottom: none;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding bg-white">
  <div class="container mx-auto px-4 max-w-site">
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl md:text-3xl font-medium text-center mb-10 tracking-tight uppercase" style="color: #374151; font-family: 'Oswald', sans-serif;">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4">
        {%- for block in section.blocks -%}
          {%- assign product = block.settings.product -%}
          <div class="product-divider bg-white px-2 flex flex-col h-full group" {{ block.shopify_attributes }}>
            {%- comment -%} Product Image {%- endcomment -%}
            <a href="{{ product.url | default: '#' }}" class="block mb-1 relative aspect-[3/4] flex items-center justify-center">
              {%- if product.featured_image != blank -%}
                {{ product.featured_image | image_url: width: 600 | image_tag: 
                  loading: 'lazy',
                  class: 'max-w-full max-h-full object-contain'
                }}
              {%- elsif block.settings.custom_image != blank -%}
                {{ block.settings.custom_image | image_url: width: 600 | image_tag: 
                  loading: 'lazy',
                  class: 'max-w-full max-h-full object-contain'
                }}
              {%- else -%}
                 <div class="w-full h-full bg-gray-50 flex items-center justify-center">
                  {{ 'product-1' | placeholder_svg_tag: 'w-1/2 h-1/2 text-gray-300' }}
                </div>
              {%- endif -%}
            </a>
            
            <div class="mt-auto px-6 pt-1 pb-6">
              {%- comment -%} Product Title {%- endcomment -%}
              <a href="{{ product.url | default: '#' }}" class="block mb-3">
                <h3 class="text-[13px] text-gray-600 -mt-5 leading-normal font-normal line-clamp-2 transition-colors group-hover:underline" style="font-family: 'Inter', sans-serif;">
                  {%- if product.title != blank -%}
                    {{ product.title }}
                  {%- else -%}
                    {{ block.settings.custom_title | default: 'Product Title' }}
                  {%- endif -%}
                </h3>
              </a>
              
              {%- comment -%} SKU and Brand {%- endcomment -%}
              <div class="flex items-center gap-2 mt-10 mb-2 text-xs leading-none">
                <span class="text-black uppercase " style="font-family: 'Inter', sans-serif;">
                  SKU: <span class="font-bold">{{ product.selected_or_first_available_variant.sku | default: block.settings.custom_sku }}</span>
                </span>
                <span class="text-gray-300">|</span>
                <span class="text-[#14b8a6] font-bold uppercase" style="font-family: 'Inter', sans-serif;">
                  {{ product.tags | first | default: product.vendor | default: block.settings.custom_brand }}
                </span>
              </div>
              
              {%- comment -%} Star Rating {%- endcomment -%}
              {%- if block.settings.show_rating and block.settings.rating > 0 -%}
                <div class="flex items-center gap-1 mb-2 mt-2">
                  <div class="flex text-[#14b8a6]">
                    {%- for i in (1..5) -%}
                      {%- if i <= block.settings.rating -%}
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                      {%- else -%}
                        <svg class="w-6 h-6 text-gray-200" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                  {%- if block.settings.review_count > 0 -%}
                    <span class="text-[10px] text-gray-400 ml-1" style="font-family: 'Inter', sans-serif;">
                      {{ block.settings.review_count }} Review
                    </span>
                  {%- endif -%}
                </div>
              {%- else -%}
                <div class="h-5 mb-2"></div>
              {%- endif -%}
              
              {%- comment -%} Price {%- endcomment -%}
              <div class="flex items-baseline gap-2 mt-1">
                {%- if product != blank -%}
                  <span class="text-lg font-bold" style="color: #c45a2c; font-family: 'Oswald', sans-serif;">
                    {{ product.price | money }}
                  </span>
                  {%- if product.compare_at_price > product.price -%}
                    <span class="text-sm text-gray-400 line-through" style="font-family: 'Oswald', sans-serif;">
                      {{ product.compare_at_price | money }}
                    </span>
                  {%- endif -%}
                {%- else -%}
                  {%- if block.settings.custom_price != blank -%}
                    <span class="text-lg font-bold" style="color: #c45a2c; font-family: 'Oswald', sans-serif;">
                      {{ block.settings.custom_price }}
                    </span>
                  {%- endif -%}
                  {%- if block.settings.custom_compare_price != blank -%}
                    <span class="text-sm text-gray-400 line-through" style="font-family: 'Oswald', sans-serif;">
                      {{ block.settings.custom_compare_price }}
                    </span>
                  {%- endif -%}
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Recommendations",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "RECOMMENDATIONS FOR YOU"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "header",
          "content": "Custom Overrides"
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom image (if no product)"
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom title"
        },
        {
          "type": "text",
          "id": "custom_sku",
          "label": "Custom SKU"
        },
        {
          "type": "text",
          "id": "custom_brand",
          "label": "Custom brand"
        },
        {
          "type": "text",
          "id": "custom_price",
          "label": "Custom price",
          "info": "e.g. $3,506.00"
        },
        {
          "type": "text",
          "id": "custom_compare_price",
          "label": "Custom compare price",
          "info": "e.g. $4,224.00"
        },
        {
          "type": "header",
          "content": "Rating"
        },
        {
          "type": "checkbox",
          "id": "show_rating",
          "label": "Show rating",
          "default": false
        },
        {
          "type": "range",
          "id": "rating",
          "min": 0,
          "max": 5,
          "step": 1,
          "label": "Star rating",
          "default": 5
        },
        {
          "type": "number",
          "id": "review_count",
          "label": "Review count",
          "default": 0
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Recommendations",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}
