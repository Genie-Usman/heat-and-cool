{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Announcement Text",
      "default": "Free Shipping on All Orders Over $50!"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar"
    }
  ]
}
{% endschema %}

{% if section.settings.show_announcement %}
  <div class="relative z-50 text-center py-2 px-4 transition-colors duration-300" 
       style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
    
    {% if section.settings.link %}
      <a href="{{ section.settings.link }}" class="hover:opacity-80 transition-opacity no-underline text-current text-sm font-medium tracking-wide">
        {{ section.settings.text }}
      </a>
    {% else %}
      <span class="text-sm font-medium tracking-wide">{{ section.settings.text }}</span>
    {% endif %}

  </div>
{% endif %}
