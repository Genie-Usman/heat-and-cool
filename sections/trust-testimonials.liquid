          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "It has been a great experience purchasing my air conditioning system from Heat & Cool."
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "James M."
        },
        {
          "type": "image_picker",
          "id": "badge_image",
          "label": "Badge image"
        },
        {
          "type": "textarea",
          "id": "badge_caption",
          "label": "Badge caption",
          "default": "Heat & Cool is honored to be one of the fastest growing private companies in America, two years in a row."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust & Testimonials",
      "blocks": [
        { 
          "type": "trust_badge",
          "settings": {
            "title": "Fast, Free Shipping",
            "description": "Orders ship free to US continental states. Most orders ship same day."
          }
        },
        { 
          "type": "trust_badge",
          "settings": {
            "title": "90-Day Returns",
            "description": "We offer an industry first, hassle-free 90-day return on all purchases."
          }
        },
        { 
          "type": "trust_badge",
          "settings": {
            "title": "Free Technical Support",
            "description": "Our experts have been providing HVAC support for over 20 years."
          }
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
