{%- style -%}
  .section-header-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #d1d5db;
  }
  
  .section-header-badge {
    position: relative;
    display: inline-block;
    padding: 2px 12px;
    background: #fff;
    border: 1px solid #2d3a4d;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #2d3a4d;
    transform: rotate(-16deg);
    box-shadow: 0 0 0 4px #fff;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  .quote-mark {
    color: #c45a2c;
    font-size: 6rem;
    line-height: 1;
  }
  
  .badge-border {
    border-style: solid;
    border-width: 2px;
    border-image: url({{ 'image_border2.png' | asset_url }}) 2 2 2 1 repeat;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="background-color: {{ section.settings.bg_color }};">
  <div class="container mx-auto px-4 max-w-site">
    {%- if section.settings.badge_text != blank -%}
      <div class="section-header-divider relative text-center mb-4">
        <span class="section-header-badge">{{ section.settings.badge_text }}</span>
      </div>
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-12 tracking-wider uppercase text-gray-900">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      {%- assign trust_badges = section.blocks | where: "type", "trust_badge" -%}
      {%- assign testimonials = section.blocks | where: "type", "testimonial" -%}
      
      {%- comment -%} Trust Badges Grid {%- endcomment -%}
      {%- if trust_badges.size > 0 -%}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
          {%- for block in trust_badges -%}
            <div class="text-center" {{ block.shopify_attributes }}>
              {%- comment -%} Icon {%- endcomment -%}
              <div class="flex justify-center mb-4">
                {%- if block.settings.icon != blank -%}
                  <div class="w-32 h-32 rounded-2xl flex items-center justify-center overflow-hidden" style="background-color: {{ block.settings.icon_bg_color }};">
                    {{ block.settings.icon | image_url: width: 300 | image_tag: 
                      loading: 'lazy',
                      class: 'w-24 h-24 object-contain'
                    }}
                  </div>
                {%- else -%}
                  <div class="w-28 h-28 rounded-2xl flex items-center justify-center" style="background-color: {{ block.settings.icon_bg_color }};">
                    <svg class="w-14 h-14 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                  </div>
                {%- endif -%}
              </div>
              
              {%- comment -%} Title {%- endcomment -%}
              {%- if block.settings.title != blank -%}
                <h3 class="text-base font-bold uppercase tracking-wider text-gray-900 mb-2">
                  {{ block.settings.title }}
                </h3>
              {%- endif -%}
              
              {%- comment -%} Description {%- endcomment -%}
              {%- if block.settings.description != blank -%}
                <p class="text-gray-600 text-sm leading-relaxed max-w-[250px] mx-auto" style="font-family: 'Inter', sans-serif;">
                  {{ block.settings.description }}
                </p>
              {%- endif -%}
            </div>
          {%- endfor -%}
        </div>
      {%- endif -%}
      
      {%- comment -%} Testimonials {%- endcomment -%}
      {%- for block in testimonials -%}
        <div class="flex flex-col md:flex-row items-center gap-8 py-8" {{ block.shopify_attributes }}>
          {%- comment -%} Quote Section {%- endcomment -%}
          <div class="md:w-2/3 pr-8">
            <div class="quote-mark mb-[-50px] ml-[-10px]" style="font-family: serif;">❝</div>
            {%- if block.settings.quote != blank -%}
              <blockquote class="text-2xl md:text-4xl font-bold text-gray-900 leading-snug relative z-10 mb-0" style="font-family: 'Inter', sans-serif;">
                {{ block.settings.quote }}
              </blockquote>
            {%- endif -%}
            <div class="quote-mark text-right mt-[-30px] mr-[-10px]" style="font-family: serif;">❞</div>
            {%- if block.settings.author != blank -%}
              <div class="border-t-2 border-[#c45a2c] pt-2 mt-[-10px] inline-block w-24 relative z-10">
                <cite class="text-lg text-gray-600 not-italic uppercase tracking-wider">
                  {{ block.settings.author }}
                </cite>
              </div>
            {%- endif -%}
          </div>
          
          {%- comment -%} Image/Badge Section {%- endcomment -%}
          <div class="md:w-1/3 flex justify-center">
            {%- if block.settings.badge_image != blank -%}
              <div class="badge-border bg-white p-8 max-w-[350px] flex flex-col items-center aspect-square">
                {{ block.settings.badge_image | image_url: width: 200 | image_tag: 
                  loading: 'lazy',
                  class: 'w-full h-auto mb-6 mt-2 max-w-[150px]'
                }}
                {%- if block.settings.badge_caption != blank -%}
                  <p class="text-sm mt-6 text-gray-600 text-center leading-relaxed" style="font-family: 'Inter', sans-serif;">
                    {{ block.settings.badge_caption }}
                  </p>
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Trust & Testimonials",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Trust"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
