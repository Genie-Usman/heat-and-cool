{%- style -%}
  .product-card {
    border-style: solid;
    border-width: 2px;
    border-image: url({{ 'image_border2.png' | asset_url }}) 2 2 2 1 repeat;
  }

  .section-header-divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #d1d5db;
  }
  
  .section-header-badge {
    position: relative;
    display: inline-block;
    padding: 2px 12px;
    background: #fff;
    border: 1px solid #2d3a4d;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #2d3a4d;
    transform: rotate(-16deg);
    box-shadow: 0 0 0 4px #fff;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding bg-white">
  <div class="container mx-auto px-4 max-w-site">
    {%- if section.settings.badge_text != blank -%}
      <div class="section-header-divider relative text-center mb-4">
        <span class="section-header-badge">{{ section.settings.badge_text }}</span>
      </div>
    {%- endif -%}
    
    {%- if section.settings.heading != blank -%}
      <h2 class="text-2xl md:text-3xl font-bold text-center mb-16 tracking-wider uppercase text-gray-900">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {%- for block in section.blocks -%}
          <div class="pt-20" {{ block.shopify_attributes }}>
            <div class="product-card bg-white relative">
              <div class="flex items-end justify-between px-4 h-16">
                {%- comment -%} Left Image - Badge {%- endcomment -%}
                <div class="w-2/5 -mt-12 -ml-1">
                  {%- if block.settings.image_left != blank -%}
                    {{ block.settings.image_left | image_url: width: 200 | image_tag: 
                      loading: 'lazy',
                      class: 'max-w-full h-auto object-contain max-h-36'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'w-24 h-24 object-contain' }}
                  {%- endif -%}
                </div>
                
                {%- comment -%} Right Image - Product {%- endcomment -%}
                <div class="w-3/5 -mt-24 flex justify-end -mr-2">
                  {%- if block.settings.image_right != blank -%}
                    {{ block.settings.image_right | image_url: width: 340 | image_tag: 
                      loading: 'lazy',
                      class: 'max-w-full h-auto object-contain max-h-40'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'w-full h-28 object-contain' }}
                  {%- endif -%}
                </div>
              </div>
              
              <a href="{{ block.settings.link | default: '#' }}" class="flex items-center justify-center gap-2 py-4 text-sm font-bold uppercase tracking-widest text-gray-700 hover:text-red-600 transition-colors">
                {{ block.settings.button_text | default: 'View More' }}
                <span class="text-current">{% render 'icon-arrow-circle' %}</span>
              </a>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="text-center pt-8">
        <a href="{{ section.settings.view_all_link }}" class="inline-flex items-center gap-2 text-sm font-bold uppercase tracking-widest text-gray-700 hover:text-red-600 transition-colors">
          {{ section.settings.view_all_text | default: 'View All Products' }}
          <span class="text-current">{% render 'icon-arrow-circle' %}</span>
        </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Cards Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Shop"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "OUR PRODUCTS"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all text",
      "default": "View All Products"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_left",
          "label": "Left image"
        },
        {
          "type": "image_picker",
          "id": "image_right",
          "label": "Right image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "View More"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Cards Grid",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}
